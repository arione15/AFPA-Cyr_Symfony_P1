{% extends "base.html.twig" %}
{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
	integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock %}
{% block title %}Administration{% endblock %}
{% block body %}
<div class="container">
	<h1>Gestion des recettes</h1>
	{# 
	<a href="#" class="btn btn-success mb-3">Ajouter</a>  ---  le # est renseigné après la création du formulaire d'ajout 
	#}
	<a href="{{path('admin_create')}}" class="btn btn-success mb-3">Ajouter</a>


	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Titre</th>
				<th>Action</th>
			</tr>
		</thead>

		<tbody>
			{% for recette in recettes %}
			<tr>
				<td>{{recette.id}}</td>
				<td>{{recette.titre}}</td>
				<td>
					<button class="btn btn-default">Editer</button>
					<button class="btn btn-danger ml-3">Supprimer</button>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}